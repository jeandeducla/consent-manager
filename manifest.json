{
    "manifest_version": 2,
    "name": "content-manager",
    "version": "1.0",

    "description": "globally manage your privacy choices on internet",

    "icons": {
        "48": "icons/icon48.png"
    },

    "browser_action": {
        "default_icon": "icons/icon32.png",
        "default_title": "constent-manager",
        "default_popup": "popup/popup.html"
    },

    "permissions": [
        "<all_urls>",
        "storage",
        "activeTab",
        "tabs"
    ],

    "background": {
        "scripts": ["background/background.js"]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-scripts/content-script.js"]
        }
    ]
}
